import java.util.*;

public class Main {
  public static void main(String[] args) {
    Scanner read=new Scanner(System.in);
    
    // Find the maximum subarray sum.
    // Optimized: Kadane's Algorithm
    int[] arr={3, 0, 1};
    int n=arr.length;
    int max=Integer.MIN_VALUE;
    int sum=0;
    for(int i=0;i<n;i++){
      sum+=arr[i];
      if(sum>max){
        max=sum;
      }
      if(sum<0){
        sum=0;
      }
    }
    System.out.println(max);
  }
}
